<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.meditriage.controller.QueueController"
      spacing="20"
      style="-fx-padding: 28; -fx-background-color: #f0f2f5;">

    <!-- Encabezado -->
    <VBox spacing="4">
        <Label text="Cola Prioritaria" styleClass="page-title"/>
        <Label text="Pacientes en espera ordenados por nivel de urgencia (MinHeap)"
               styleClass="page-subtitle"/>
    </VBox>

    <!-- Barra de acciones -->
    <HBox spacing="12" alignment="CENTER_LEFT">
        <Button text="✅ Atender siguiente"
                fx:id="btnAttendNext"
                styleClass="btn-primary"
                onAction="#onAttendNext"/>
        <Button text="↩ Deshacer última acción"
                fx:id="btnUndo"
                styleClass="btn-warning"
                onAction="#onUndo"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="lblQueueInfo" text="Total en espera: —"
               style="-fx-text-fill: #636e72;"/>
    </HBox>

    <!-- Status / mensaje -->
    <Label fx:id="lblStatus" text="—"
           style="-fx-text-fill: #4361ee; -fx-font-weight: bold;"
           wrapText="true"/>

    <!-- Tabla de pacientes en espera -->
    <TableView fx:id="tableQueue" VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 4);">
        <columns>
            <TableColumn fx:id="colId"       text="ID"        prefWidth="55"/>
            <TableColumn fx:id="colName"     text="Nombre"    prefWidth="160"/>
            <TableColumn fx:id="colAge"      text="Edad"      prefWidth="55"/>
            <TableColumn fx:id="colLevel"    text="Nivel"     prefWidth="170"/>
            <TableColumn fx:id="colSymptoms" text="Síntomas"  prefWidth="240"/>
            <TableColumn fx:id="colArrival"  text="Llegada"   prefWidth="110"/>
            <TableColumn fx:id="colWait"     text="Espera"    prefWidth="80"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Leyenda de colores -->
    <HBox spacing="16" alignment="CENTER_LEFT"
          style="-fx-padding: 4 0 0 4;">
        <Label text="Leyenda:" style="-fx-text-fill: #636e72; -fx-font-size: 12px;"/>
        <Label text="■ N1 Resucitación"  style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;"/>
        <Label text="■ N2 Emergente"     style="-fx-text-fill: #e67e22; -fx-font-size: 12px;"/>
        <Label text="■ N3 Urgente"       style="-fx-text-fill: #f39c12; -fx-font-size: 12px;"/>
        <Label text="■ N4 Menos Urgente" style="-fx-text-fill: #27ae60; -fx-font-size: 12px;"/>
        <Label text="■ N5 No Urgente"    style="-fx-text-fill: #3498db; -fx-font-size: 12px;"/>
    </HBox>
</VBox>
